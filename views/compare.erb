<html>
  <head>
    <title>Compare <%= @first.upcase %> and <%= @second.upcase %></title>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>

  <body>
    <div class="content">
    <h2>Results for <%= @first.upcase %> and <%= @second.upcase %></h2>
    <div id="results">
    <div id="left">
      <h3><%= @first.capitalize %></h3>
      <div class="wireline">
        <h4>Wireline Providers</h4>
        <% @wireline1.results.wireline_services.each do |x| %>
          <h5><%= x.provider_name %></h5>
          <p>Max Advertised Download Speed: <span><%= x.technologies[0].maximum_advertised_download_speed %></span>Mbs</p>
          <p>Max Advertised Upload Speed: <span><%= x.technologies[0].maximum_advertised_upload_speed %></span>Mbs</p>
        <% end %>
      </div>
      <div class="wireless">
         <h4>Wireless Providers</h4>
          <% @wireless1.results.wireless_services.each do |x| %>
          <h5><%= x.provider_name %></h5>
          <p>Max Advertised Download Speed: <span><%= x.technologies[0].maximum_advertised_download_speed %></span>Mbs</p>
          <p>Max Advertised Upload Speed: <span><%= x.technologies[0].maximum_advertised_upload_speed %></span>Mbs</p>
        <% end %>
      </div>
    </div>
    <div id = "right">
      <h3><%= @second.capitalize %></h3>
      <div class="wireline">
        <h4>Wireline Providers</h4>
       <% @wireline2.results.wireline_services.each do |x| %>
         <h5><%= x.provider_name %></h5>
         <p>Max Advertised Speed: <span><%= x.technologies[0].maximum_advertised_download_speed %></span>Mbs</p>
         <p>Max Advertised Upload Speed: <span><%= x.technologies[0].maximum_advertised_upload_speed %></span>Mbs</p>
       <% end %>
     </div>
     <div class="wireless">
        <h4>Wireless Providers</h4>
        <% @wireless2.results.wireless_services.each do |x| %>
          <h5><%= x.provider_name %></h5>
          <p>Max Advertised Download Speed: <span><%= x.technologies[0].maximum_advertised_download_speed %></span>Mbs</p>
          <p>Max Advertised Upload Speed: <span><%= x.technologies[0].maximum_advertised_upload_speed %></span>Mbs</p>
        <% end %>
      </div>
     </div>
   </div>
 </div>
  </body>
</html>

